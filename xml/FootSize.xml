<campaign>
  <surveys>
    <survey>
      <id>footsize</id>
      <title>Foot Size</title>
      <description>This survey asks you questions about the size of your foot</description>
      <submitText>Thank you for filling out the survey!</submitText>
      <anytime>true</anytime>
      <summaryText>Foot Size Survey</summaryText>

      <contentList>
        <!-- Birth gender? -->
        <prompt>
          <id>birth_gender</id>
          <displayLabel>Birth Gender</displayLabel>
          <promptText>What is your birth/biological gender?</promptText>
          <abbreviatedText>Day</abbreviatedText>
          <promptType>single_choice</promptType>
          <!-- options for users to choose from -->
          <properties>
            <property>
              <key>0</key>
              <label>Male</label>
            </property>
            <property>
              <key>1</key>
              <label>Female</label>
            </property>
          </properties>
          <!-- default option -->
          <skippable>false</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>

        <!-- Mens/Womens shoe type? -->
        <prompt>
          <id>size_type</id>
          <displayLabel>Shoe Size Type</displayLabel>
          <promptText>Are you reporting your shoe size in 'Mens' or 'Womens' sizes?</promptText>
          <abbreviatedText>Size type</abbreviatedText>
          <promptType>single_choice</promptType>
          <!-- options for users to choose from -->
          <properties>
            <property>
              <key>0</key>
              <label>Mens</label>
            </property>
            <property>
              <key>1</key>
              <label>Womens</label>
            </property>
          </properties>
          <!-- default option -->
          <skippable>false</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>

