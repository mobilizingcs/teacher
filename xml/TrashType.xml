<?xml version="1.0" encoding="UTF-8"?>

<campaign>


  <surveys>
    <survey>
      <id>trashSurvey2</id>
      <title>Trash Survey</title>
      <description>Collect information about trashes that you throw away.</description>
      <submitText>Thank you for submitting a trash survey!</submitText>
      <anytime>true</anytime>

      <contentList>

        <prompt>
          <id>trashName</id>
          <displayLabel>Trash Name</displayLabel>
          <promptText>What is this trash?</promptText>
          <abbreviatedText>Trash name?</abbreviatedText>
          <promptType>text</promptType>
	  <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>200</label>
            </property>
	  </properties>
          <skippable>false</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>
	
        <prompt>
          <id>trashType</id>
          <displayLabel>Trash Type</displayLabel>
          <promptText>What is the type of this trash?</promptText>
          <abbreviatedText>Single Choice</abbreviatedText>
          <promptType>single_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Composable</label>
            </property>
            <property>
              <key>1</key>
              <label>Recyclable</label>
            </property>
            <property>
              <key>2</key>
              <label>Landfill</label>
            </property>
          </properties>
          <skippable>false</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>


        <prompt>
          <id>trashPhoto</id>
          <displayLabel>Trash Photo</displayLabel>
          <promptText>Take a picture of this trash.</promptText>
          <abbreviatedText>Take a picture.</abbreviatedText>
          <promptType>photo</promptType>
          <properties>
            <property>
              <key>maxdimension</key>
              <label>800</label>
            </property>
          </properties>
          <skippable>false</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>

      </contentList>
   </survey>


  </surveys>
</campaign>
