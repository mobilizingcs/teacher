<campaign>
    <surveys>
        <survey>
            <id>trash</id>
            <title>Trash</title>
            <description>A campaign about you and your trash.</description>
            <introText>Please enter data every time you throw something away or find trash around you.</introText>
            <submitText>Thanks.</submitText>
            <anytime>true</anytime>
            <contentList>
                <prompt>
                    <id>photo</id>
                    <displayLabel>photo</displayLabel>
                    <promptText>Please take a photo of your trash.</promptText>
                    <promptType>photo</promptType>
                    <skippable>true</skippable>
		    <skipLabel>Skip</skipLabel>
                    <properties>
                        <property>
                            <key>maxDimension</key>
                            <label>800</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>whatTrash</id>
                    <displayLabel>description</displayLabel>
                    <promptText>Please describe your trash</promptText>
                    <promptType>text</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>200</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>type</id>
                    <displayLabel>type</displayLabel>
                    <promptText>What type of trash?</promptText>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>recyclable</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>landfill</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>compost</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>where</id>
                    <displayLabel>where</displayLabel>
                    <promptText>Where was this trash generated/found?</promptText>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>home</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>school</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>work</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>restaurants</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>stores/malls</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>in transit</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>others</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>activity</id>
                    <displayLabel>activity</displayLabel>
                    <promptText>What activity generated this trash?</promptText>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>eating/cooking</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>drinking</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>school work</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>cleaning</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>shopping</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>I found it</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>other</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>receptacle</id>
                    <displayLabel>receptacle</displayLabel>
                    <promptText>Where did you put this trash when you were done?</promptText>
                    <promptType>single_choice</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>0</key>
                            <label>recyclable</label>
                        </property>
                        <property>
                            <key>1</key>
                            <label>trash</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>compost/green waste</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>litter</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>numberRecycleBins</id>
                    <displayLabel>howManyRecycle</displayLabel>
                    <promptText>How many recycling bins can you see from your location?</promptText>
                    <promptType>number</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>numberTrashBins</id>
                    <displayLabel>howManyLandfill</displayLabel>
                    <promptText>How many trash/landfill bins can you see from your location?</promptText>
                    <promptType>number</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                </prompt>
                <prompt>
                    <id>numberCompostBins</id>
                    <displayLabel>howManyCompost</displayLabel>
                    <promptText>How many compost/green-waste bins can you see from your location?</promptText>
                    <promptType>number</promptType>
                    <skippable>false</skippable>
                    <properties>
                        <property>
                            <key>min</key>
                            <label>0</label>
                        </property>
                        <property>
                            <key>max</key>
                            <label>10</label>
                        </property>
                    </properties>
                </prompt>
            </contentList>
        </survey>
    </surveys>
</campaign>
