<?xml version="1.0" encoding="UTF-8"?>
<campaign>
  <campaignName>Advertisement</campaignName>
  <iconUrl>http://web.ohmage.org/mobilize/img/ad_icon.png</iconUrl>
  
  <surveys>
    <survey>
      <id>AdvertisingMedia</id>
      <title>Advertising Media</title>
      <description>Observe and collect forms of advertising media in the community.</description>
      <submitText>Advertising Media</submitText>
      <showSummary>false</showSummary>
      <editSummary>false</editSummary>
      <summaryText>Observe and collect forms of advertising media in the community</summaryText>
      <anytime>true</anytime>
    
      <contentList>
        <prompt>
          <id>AdPhoto</id>
          <displayType>event</displayType>
          <displayLabel>Advertisement Photo</displayLabel>
          <unit>Unit</unit>
          <promptText>Take a picture of the ad</promptText>
          <abbreviatedText>Take a picture</abbreviatedText>
          <promptType>photo</promptType>
          <properties>
            <property>
              <key>res</key>
              <label>720</label>
            </property>
          </properties>
          <skippable>true</skippable>
          <skipLabel>Skip</skipLabel>
        </prompt>

        <prompt>
          <id>AdvertisementType</id>
          <displayType>event</displayType>
          <displayLabel>Advertisement Type</displayLabel>
          <unit>Type</unit>
          <promptText>Advertisement type?</promptText>
          <abbreviatedText>Advertisement type</abbreviatedText>
          <promptType>single_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Billboard</label>
            </property>
            <property>
              <key>1</key>
              <label>Digital Display</label>
            </property>
            <property>
              <key>2</key>
              <label>Poster</label>
            </property>
            <property>
              <key>3</key>
              <label>Bus</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>Product</id>
          <displayType>event</displayType>
          <displayLabel>Product</displayLabel>
          <unit>Product</unit>
          <promptText>Product?</promptText>
          <abbreviatedText>Product?</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>
      
        <prompt>
          <id>ProductType</id>
          <displayType>category</displayType>
          <displayLabel>Product Type</displayLabel>
          <unit>Type</unit>
          <promptText>Product type?</promptText>
          <abbreviatedText>Product type</abbreviatedText>
          <promptType>single_choice</promptType>
          <properties>
            <property>
              <key>0</key>
              <label>Food and drinks</label>
            </property>
            <property>
              <key>1</key>
              <label>Entertainment</label>
            </property>
            <property>
              <key>2</key>
              <label>Electronics and apps</label>
            </property>
            <property>
              <key>3</key>
              <label>Clothing, shoes, accessories</label>
            </property>
            <property>
              <key>4</key>
              <label>Home</label>
            </property>
            <property>
              <key>5</key>
              <label>Beauty</label>
            </property>
            <property>
              <key>6</key>
              <label>Health and medical</label>
            </property>
            <property>
              <key>7</key>
              <label>Transportation</label>
            </property>
            <property>
              <key>8</key>
              <label>Community/legal services</label>
            </property>
            <property>
              <key>9</key>
              <label>Vice</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>TargetAudience</id>
          <displayType>event</displayType>
          <displayLabel>TargetAudience</displayLabel>
          <unit>Unit</unit>
          <promptText>TargetAudience?</promptText>
          <abbreviatedText>Target Audience</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>DesiredLevel</id>
          <displayType>measurement</displayType>
          <displayLabel>Desired Level</displayLabel>
          <unit>Level</unit>
          <promptText>How much do you want to have this? (1 least desirable, 5 most desirable)</promptText>
          <abbreviatedText>How much do you want to have this?</abbreviatedText>
          <promptType>number</promptType>
           <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>5</label>
            </property>
          </properties>
          <default>3</default>
          <skippable>false</skippable>
        </prompt>

        <prompt>
          <id>Feeling</id>
          <displayType>event</displayType>
          <displayLabel>Feeling</displayLabel>
          <unit>Unit</unit>
          <promptText>This ad makes me feel...</promptText>
          <abbreviatedText>This ad makes me feel...</abbreviatedText>
          <promptType>text</promptType>
          <properties>
            <property>
              <key>min</key>
              <label>1</label>
            </property>
            <property>
              <key>max</key>
              <label>256</label>
            </property>
          </properties>
          <skippable>false</skippable>
        </prompt>
        
      </contentList>
    
    </survey>
  </surveys>
</campaign>
